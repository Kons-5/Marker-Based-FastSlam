<launch>
  <!-- Define all necessary parameters -->
  <arg name="camera_namespace" default="/camera"/>
  <arg name="image" default="image"/>
  <arg name="transport" default="compressed"/>
  <arg name="fiducial_len" default="0.14"/>
  <arg name="dictionary" default="7"/>
  <arg name="do_pose_estimation" default="true"/>
  <arg name="vis_msgs" default="false"/>
  <arg name="ignore_fiducials" default=""/>
  <arg name="fiducial_len_override" default=""/>
  <arg name="verbose" default="false"/>

  <!-- aruco_detect node configuration -->
  <node pkg="aruco_detect" name="aruco_detect" type="aruco_detect" output="screen">
    <param name="image_transport" value="$(arg transport)"/>
    <param name="publish_images" value="true"/>
    <param name="fiducial_len" value="$(arg fiducial_len)"/>
    <param name="dictionary" value="$(arg dictionary)"/>
    <param name="do_pose_estimation" value="true"/>
    <param name="vis_msgs" value="true"/>
    <param name="ignore_fiducials" value="$(arg ignore_fiducials)"/>
    <param name="fiducial_len_override" value="$(arg fiducial_len_override)"/>
    <param name="verbose" value="true"/>
    
    <!-- Corrected remapping for camera topics -->
    <remap from="camera/compressed" to="$(arg camera_namespace)/image/$(arg transport)"/>
    <remap from="camera_info" to="$(arg camera_namespace)/camera_info"/>
  </node>
</launch>

